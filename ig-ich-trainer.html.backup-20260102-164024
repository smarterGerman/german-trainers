        { word: "komisch", ending: "ich" },
        { word: "kritisch", ending: "ich" },
        { word: "menschlich", ending: "ich" },
        { word: "ordentlich", ending: "ich" },
        { word: "unordentlich", ending: "ich" },
        { word: "wahrscheinlich", ending: "ich" },
        { word: "ungewöhnlich", ending: "ich" },
        { word: "üblich", ending: "ich" },
        { word: "pünktlich", ending: "ich" },
        { word: "eigentlich", ending: "ich" },
        { word: "selbstverständlich", ending: "ich" },
        { word: "verantwortlich", ending: "ich" },
        { word: "verständlich", ending: "ich" },
        { word: "unverständlich", ending: "ich" },
        { word: "nützlich", ending: "ich" },
        { word: "schädlich", ending: "ich" },
        { word: "wesentlich", ending: "ich" }
      ];

      const QUESTIONS_PER_SESSION = 40;
      const STORAGE_KEY = 'german_ig_ich_stats';

      let currentExercises = [];
      let currentIndex = 0;
      let sessionScore = 0;
      let answered = false;
      let userAnswers = [];
      let incorrectWords = [];
      let isRetryMode = false;
      let germanVoice = null;
      let isSpeaking = false;

      // Initialize TTS
      function initTTS() {
        if (!('speechSynthesis' in window)) {
          document.getElementById('ttsWarning').classList.remove('hidden');
          return false;
        }

        // Load voices
        function loadVoices() {
          const voices = speechSynthesis.getVoices();
          // Try to find a German voice
          germanVoice = voices.find(v => v.lang.startsWith('de')) || null;

          if (!germanVoice && voices.length > 0) {
            // Fallback: use any voice but warn
            console.warn('No German voice found, using default');
          }
        }

        loadVoices();
        if (speechSynthesis.onvoiceschanged !== undefined) {
          speechSynthesis.onvoiceschanged = loadVoices;
        }

        return true;
      }

      // Speak a word
      function speakWord(word) {
        if (!('speechSynthesis' in window)) return;

        // Cancel any ongoing speech
        speechSynthesis.cancel();

        const utterance = new SpeechSynthesisUtterance(word);
        utterance.lang = 'de-DE';
        utterance.rate = 0.9; // Slightly slower for clarity

        if (germanVoice) {
          utterance.voice = germanVoice;
        }

        const playBtn = document.getElementById('playBtn');

        utterance.onstart = function() {
          isSpeaking = true;
          playBtn.classList.add('speaking');
        };

        utterance.onend = function() {
          isSpeaking = false;
          playBtn.classList.remove('speaking');
        };

        utterance.onerror = function() {
          isSpeaking = false;
          playBtn.classList.remove('speaking');
        };

        speechSynthesis.speak(utterance);
      }

      // Play current word
      window.playCurrentWord = function() {
        if (currentExercises.length === 0) return;
        const exercise = currentExercises[currentIndex];
        speakWord(exercise.word);
      };

      // Load stats from localStorage
      function loadStats() {
        try {
          const stored = localStorage.getItem(STORAGE_KEY);
          if (stored) {
            return JSON.parse(stored);
          }
        } catch (e) {
          console.warn('Could not load stats:', e);
        }
        return { totalAttempts: 0, correctAnswers: 0 };
      }

      // Save stats to localStorage
      function saveStats(stats) {
        try {
          localStorage.setItem(STORAGE_KEY, JSON.stringify(stats));
        } catch (e) {
          console.warn('Could not save stats:', e);
        }
      }

      // Update stats display
      function updateStatsDisplay() {
        const stats = loadStats();
        document.getElementById('statTotal').textContent = stats.totalAttempts;
        document.getElementById('statCorrect').textContent = stats.correctAnswers;
        const accuracy = stats.totalAttempts > 0
          ? Math.round((stats.correctAnswers / stats.totalAttempts) * 100)
          : 0;
        document.getElementById('statAccuracy').textContent = accuracy + '%';
      }

      // Shuffle array
      function shuffleArray(array) {
        const shuffled = [...array];
        for (let i = shuffled.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
        }
        return shuffled;
      }

      // Start new session
      window.startNewSession = function() {
        isRetryMode = false;
        const shuffled = shuffleArray([...allWords]);
        currentExercises = shuffled.slice(0, QUESTIONS_PER_SESSION);
        currentIndex = 0;
        sessionScore = 0;
        userAnswers = new Array(currentExercises.length).fill(null);
        incorrectWords = [];

        document.getElementById('exerciseArea').classList.remove('hidden');
        document.getElementById('resultsArea').classList.add('hidden');
        document.getElementById('totalQ').textContent = currentExercises.length;

        showExercise();
        updateStatsDisplay();
      };

      // Retry incorrect words
      window.retryIncorrect = function() {
        if (incorrectWords.length === 0) return;

        isRetryMode = true;
        currentExercises = shuffleArray([...incorrectWords]);
        currentIndex = 0;
        sessionScore = 0;
        userAnswers = new Array(currentExercises.length).fill(null);
        incorrectWords = [];

        document.getElementById('exerciseArea').classList.remove('hidden');
        document.getElementById('resultsArea').classList.add('hidden');
        document.getElementById('totalQ').textContent = currentExercises.length;

        showExercise();
      };

      // Show current exercise
      function showExercise() {
        const exercise = currentExercises[currentIndex];
        const previousAnswer = userAnswers[currentIndex];

        document.getElementById('currentQ').textContent = currentIndex + 1;
        document.getElementById('sessionScore').textContent = sessionScore;

        const progressPercent = (currentIndex / currentExercises.length) * 100;
        const progressBar = document.getElementById('progressBar');
        progressBar.style.width = progressPercent + '%';
        progressBar.parentElement.setAttribute('aria-valuenow', Math.round(progressPercent));

        const btnIg = document.getElementById('btnIg');
        const btnIch = document.getElementById('btnIch');
        const feedback = document.getElementById('feedback');
        const wordReveal = document.getElementById('wordReveal');
        const listenHint = document.getElementById('listenHint');

        if (previousAnswer !== null) {
          // Already answered this question
          answered = true;
          btnIg.disabled = true;
          btnIch.disabled = true;

          btnIg.classList.remove('correct', 'wrong');
          btnIch.classList.remove('correct', 'wrong');

          // Show the word
          wordReveal.textContent = exercise.word;
          wordReveal.classList.remove('hidden');
          listenHint.textContent = 'Click to hear again';

          if (exercise.ending === 'ig') {
            btnIg.classList.add('correct');
            if (previousAnswer !== 'ig') {
              btnIch.classList.add('wrong');
            }
          } else {
            btnIch.classList.add('correct');
            if (previousAnswer !== 'ich') {
              btnIg.classList.add('wrong');
            }
          }

          const isCorrect = previousAnswer === exercise.ending;
          feedback.className = 'feedback ' + (isCorrect ? 'correct' : 'wrong');
          feedback.textContent = isCorrect
            ? 'Correct!'
            : 'Wrong! The correct ending is: -' + exercise.ending;
          feedback.classList.remove('hidden');
        } else {
          // Fresh question - hide word, play audio
          answered = false;
          btnIg.disabled = false;
          btnIch.disabled = false;
          btnIg.classList.remove('correct', 'wrong');
          btnIch.classList.remove('correct', 'wrong');
          feedback.classList.add('hidden');
          wordReveal.classList.add('hidden');
          listenHint.textContent = 'Click or press Space to play';

          // Auto-play the word after a short delay
          setTimeout(() => {
            if (!answered && currentExercises[currentIndex] === exercise) {
              playCurrentWord();
            }
          }, 300);
        }

        updateNavButtons();
      }

      // Update navigation buttons
      function updateNavButtons() {
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');

        prevBtn.disabled = currentIndex === 0;

        const isLastQuestion = currentIndex === currentExercises.length - 1;
        nextBtn.disabled = !answered || isLastQuestion;

        if (isLastQuestion && answered) {
          nextBtn.textContent = 'See Results';
          nextBtn.disabled = false;
        } else {
          nextBtn.textContent = 'Next';
        }
      }

      // Check answer
      window.checkAnswer = function(selectedEnding) {
        if (answered) return;

        answered = true;
        const exercise = currentExercises[currentIndex];
        const isCorrect = selectedEnding === exercise.ending;

        userAnswers[currentIndex] = selectedEnding;

        const btnIg = document.getElementById('btnIg');
        const btnIch = document.getElementById('btnIch');
        const wordReveal = document.getElementById('wordReveal');
        const listenHint = document.getElementById('listenHint');

        btnIg.disabled = true;
        btnIch.disabled = true;

        // Reveal the word
        wordReveal.textContent = exercise.word;
        wordReveal.classList.remove('hidden');
        listenHint.textContent = 'Click to hear again';

        // Show correct answer
        if (exercise.ending === 'ig') {
          btnIg.classList.add('correct');
          if (!isCorrect) {
            btnIch.classList.add('wrong');
          }
        } else {
          btnIch.classList.add('correct');
          if (!isCorrect) {
            btnIg.classList.add('wrong');
          }
        }

        if (isCorrect) {
          sessionScore++;
          document.getElementById('sessionScore').textContent = sessionScore;
        } else {
          incorrectWords.push(exercise);
        }

        // Update localStorage stats
        const stats = loadStats();
        stats.totalAttempts++;
        if (isCorrect) {
          stats.correctAnswers++;
        }
        saveStats(stats);
        updateStatsDisplay();

        // Show feedback
        const feedback = document.getElementById('feedback');
        feedback.className = 'feedback ' + (isCorrect ? 'correct' : 'wrong');
        feedback.textContent = isCorrect
          ? 'Correct!'
          : 'Wrong! The correct ending is: -' + exercise.ending;
        feedback.classList.remove('hidden');

        updateNavButtons();
      };

      // Go to previous question
      window.goToPrevious = function() {
        if (currentIndex > 0) {
          currentIndex--;
          showExercise();
        }
      };

      // Go to next question
      window.goToNext = function() {
        if (!answered) return;

        if (currentIndex < currentExercises.length - 1) {
          currentIndex++;
          showExercise();
        } else {
          showResults();
        }
      };

      // Show results
      function showResults() {
        document.getElementById('exerciseArea').classList.add('hidden');
        document.getElementById('resultsArea').classList.remove('hidden');

        const total = currentExercises.length;
        const percentage = Math.round((sessionScore / total) * 100);

        document.getElementById('resultPercentage').textContent = percentage + '%';
        document.getElementById('resultScore').textContent = sessionScore;
        document.getElementById('resultTotal').textContent = total;

        const incorrectSection = document.getElementById('incorrectSection');
        const incorrectItems = document.getElementById('incorrectItems');
        const retryBtn = document.getElementById('retryBtn');

        if (incorrectWords.length > 0) {
          incorrectSection.classList.remove('hidden');
          retryBtn.classList.remove('hidden');

          incorrectItems.innerHTML = incorrectWords.map((item, idx) => `
            <div class="incorrect-item">
              <span class="incorrect-word">${item.word}</span>
              <span class="incorrect-ending">-${item.ending}</span>
              <button class="incorrect-play-btn" onclick="speakWordDirect('${item.word}')" aria-label="Play ${item.word}">&#9654;</button>
            </div>
          `).join('');
        } else {
          incorrectSection.classList.add('hidden');
          retryBtn.classList.add('hidden');
        }
      }

      // Speak word directly (for results page)
      window.speakWordDirect = function(word) {
        speakWord(word);
      };

      // Toggle instructions
      window.toggleInstructions = function() {
        const infoSection = document.getElementById('infoSection');
        const divider = document.getElementById('dividerLine');
        const btn = document.getElementById('hideTextBtn');

        if (infoSection.classList.contains('sg-dark-hidden')) {
          infoSection.classList.remove('sg-dark-hidden');
          divider.classList.remove('sg-dark-hidden');
          btn.textContent = 'Hide Instructions';
          btn.setAttribute('aria-expanded', 'true');
        } else {
          infoSection.classList.add('sg-dark-hidden');
          divider.classList.add('sg-dark-hidden');
          btn.textContent = 'Show Instructions';
          btn.setAttribute('aria-expanded', 'false');
        }
      };

      // Keyboard shortcuts
      document.addEventListener('keydown', function(e) {
        // Ignore if in results view
        if (!document.getElementById('resultsArea').classList.contains('hidden')) return;

        const key = e.key.toLowerCase();

        if (key === ' ' || e.code === 'Space') {
          e.preventDefault();
          playCurrentWord();
        } else if (key === 'i' && !answered) {
          e.preventDefault();
          checkAnswer('ig');
        } else if (key === 'c' && !answered) {
          e.preventDefault();
          checkAnswer('ich');
        } else if (key === 'enter' && answered) {
          e.preventDefault();
          goToNext();
        } else if (key === 'backspace' && currentIndex > 0) {
          e.preventDefault();
          goToPrevious();
        }
      });

      // Initialize on load
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          initTTS();
          updateStatsDisplay();
          startNewSession();
        });
      } else {
        initTTS();
        updateStatsDisplay();
        startNewSession();
      }
    })();
  </script>
</body>
</html>
